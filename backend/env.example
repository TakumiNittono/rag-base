# ===========================================
# RAG System 環境変数設定
# ===========================================
# このファイルを .env にコピーして使用してください
# cp env.example .env

# -------------------------------------------
# Supabase設定
# -------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=documents

# -------------------------------------------
# データベース設定（Supabase PostgreSQL）
# -------------------------------------------
DB_HOST=db.your-project.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-db-password

# -------------------------------------------
# OpenAI API設定
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key

# -------------------------------------------
# RAG設定
# -------------------------------------------
# Embeddingモデル（text-embedding-3-small / text-embedding-3-large）
EMBEDDING_MODEL=text-embedding-3-small

# チャットモデル（gpt-4o-mini / gpt-4o / gpt-4-turbo）
CHAT_MODEL=gpt-4o-mini

# チャンクサイズ（文字数）
CHUNK_SIZE=500

# チャンクオーバーラップ（文字数）
CHUNK_OVERLAP=50

# 類似検索で取得するチャンク数
TOP_K=5

# -------------------------------------------
# 管理者設定
# -------------------------------------------
# カンマ区切りで複数指定可能
ADMIN_EMAILS=admin@example.com

# -------------------------------------------
# アプリケーション設定
# -------------------------------------------
# ログレベル（DEBUG / INFO / WARNING / ERROR）
LOG_LEVEL=INFO

# CORS許可オリジン（カンマ区切りで複数指定可能）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7071

# APIタイムアウト（秒）
API_TIMEOUT=30

# 最大ファイルサイズ（バイト）10MB = 10485760
MAX_FILE_SIZE=10485760

# 環境（development / staging / production）
ENVIRONMENT=development
